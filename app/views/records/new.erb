<h2>Add A New Record</h2>

<form action = "/records/new" method = "post">
  <label>Name: </label>
  <input type = "text" name = "record[name]"><br></br>
  <label>Artist: </label>
  <select name = "record[artist_id]">
    <%Artist.all.order(name: :asc).each do |a|%>
    <option value = "<%=a.id%>"><%=a.name%></option>
    <%end%>
  </select>
  <label>Add New Artist: </label>
  <input type = "text" name = "artist[name]" placeholder = "artist name"><br></br>
  <label>Label: </label>
  <select name = "record[label_id]">
    <%Label.all.order(name: :asc).each do |l|%>
    <option value = "<%=l.id%>"><%=l.name%></option>
    <%end%>
  </select>
  <label>Add New Label: </label>
  <input type = "text" name = "label[name]" placeholder = "label name"><br></br>
  <label>Release Year: </label>
  <input type = "text" name = "record[release_year]"><br></br>
  <label>Format: </label>
  <select name = "record[format]">
    <option value = '7"'>7"</option>
    <option value = '10"'>10"</option>
    <option value = '12"'>12"</option>
  </select><br></br>
  <label>Type: </label>
  <select name = "record[record_type]">
    <option value = "Single">Single</option>
    <option value = "EP">EP</option>
    <option value = "LP">LP</option>
    <option value = "Double LP">Double LP</option>
    <option value = "Triple LP">Triple LP</option>
    <option value = "Box Set">Box Set</option>
  </select><br></br>
  <label>RMP: </label>
  <select name = "record[rpm]">
    <option value = "33rpm">33rpm</option>
    <option value = "45rpm">45rpm</option>
    <option value = "78rpm">78rpm</option>
  </select><br></br>
  <input type = "submit" value = "Add Record">
</table>
